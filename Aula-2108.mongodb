//OPERADORES L√ìGICOS NO MONGODB

/* titulo e ano dos filmes cujo o titulo √© diferente de Guerra na Estrelas e o ano seja maior que 1980 */ 
use('projetobd')
db.filmes.find({ $and: [
    {titulo: {$ne: "Star Wars"}},
    {ano: {$gt: 1980}}
]},{_id:0, titulo:1, ano:1})

/* titulo e ano dos filmes cujo o titulo √© diferente de Guerra na Estrelas OU o ano seja maior que 1980 */ 
use('projetobd')
db.filmes.find({ $or: [
    {titulo: {$eq: "Star Wars"}},
    {ano: {$gt: 1980}}
]},{_id:0, titulo:1, ano:1})

/* Utilizando Express√£o Regular nas buscas */
// i = intensive case
use('projetobd')
db.filmes.find({titulo: /star wars/i})

//que comece com sta (usamos o ^ da ER)
use('projetobd')
db.filmes.find({titulo: /^sta/i})

//que termine com wars(usamos o $ da ER)
use('projetobd')
db.filmes.find({titulo: /wars$/i})

/* SORT */
